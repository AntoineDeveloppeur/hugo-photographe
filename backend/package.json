{
  "name": "hugo-photographe-backend",
  "version": "1.0.0",
  "description": "Serveur backend pour le site d'Hugo Photographe",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon dist/server.js",
    "build": "tsc && tsc-alias",
    "watch": "concurrently \"tsc --watch\" \"tsc-alias --watch\"",
    "type-check": "tsc --noEmit",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.782.0",
    "@aws-sdk/s3-request-presigner": "^3.782.0",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^5.1.1",
    "brcypt": "^1.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "formidable": "^3.5.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.0",
    "sharp": "^0.34.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/formidable": "^3.4.5",
    "@types/jsonwebtoken": "^9.0.9",
    "concurrently": "^9.2.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.4.2"
  }
}
